<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="Como sobreviver a um encontro" package="art.catavento.ignjam2016" version="1.0.0" company="Catavento" />

	<!-- output -->
 	<app file="Como sobreviver a um encontro" main="MainEngine" path="bin" />

	<window fps="60" background="0xFFFFFF" />
	<window width="1200" height="750" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<!-- classpath, haxe libs -->
	<haxelib name="HaxePunk" />

	<!-- assets -->
	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.mp3" if="flash" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" unless="flash" />
	<assets path="assets/font" rename="font" include="*.ttf|*.otf" />
	<assets path="assets/" rename="assets" />

	<icon path="Icon-ldpi.png" size="36" />
	<icon path="Icon-mdpi.png" size="48" />
	<icon path="Icon-hdpi.png" size="72" />
	<icon path="Icon-xhdpi.png" size="96" />
	<icon path="Icon-xxhdpi.png" size="144" />
	<icon path="Icon-xxxhdpi.png" size="192" />
</project>
